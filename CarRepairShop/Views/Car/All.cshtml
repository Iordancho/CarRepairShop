
@model AllCarsSearchViewModel

@{
    ViewBag.Title = "Your Cars";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

    <form method="get" class="d-flex">
        <label asp-for="SearchTerm" class="text-center"></label>
        <input asp-for="SearchTerm" class="form-control" placeholder="Type Make or Model">
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
<hr />

<div class="text-center row justify-content-center">
    @foreach (var c in Model.Cars)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1 text-warning">@c.Make @c.Model</h5>
                <p class="mb-0"><span class="fw-bold">Production date: </span>@c.ProductionDate</p>
                <p class="mb-0"><span class="fw-bold">VIN: </span>@c.VIN</p>
            </div>
            <a asp-controller="Reservation" asp-action="AllCarReservations" asp-route-id="@c.Id" class="btn btn-info mb-2 w-100 p-3 fw-bold">View Reservations</a>
            <a asp-controller="Car" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger mb-2 w-100 p-3 fw-bold">Delete Car</a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}