@model IEnumerable<ReservationStatusViewModel>

@{
    ViewData["Title"] = "Reservations";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />




<div class="container text-center">
    <div class="row">
        @foreach (var status in Model)
        {
            <div class="col">
                <p class="fs-1">
                    @status.Name
                </p>


                @if (status.CarReservations.Any())
                {
                    <div class="row  d-flex justify-content-center">
                        @await Html.PartialAsync("~/Views/Shared/ReservationPartialView.cshtml", status.CarReservations)
                    </div>
                }
                else
                {
                    <p class="text-center">No @status.Name Reservations yet!</p>
                }
            </div>
        }
    </div>
</div>

