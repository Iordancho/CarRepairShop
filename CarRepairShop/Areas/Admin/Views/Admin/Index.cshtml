﻿@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can see all <b>Cars</b>, <b>Reservations</b>,
         and <b>Users</b>.
        <br />You can <b>Add</b> Roles, too!
    </p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" asp-area="Admin"
    asp-controller="Admin" asp-action="AddRole">Add Role</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Admin" asp-action="AllCars"
       class="btn btn-primary btn-lg">All Cars</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Admin" asp-action="AllReservations"
       class="btn btn-primary btn-lg">All Reservations</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>